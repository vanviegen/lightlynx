{
  "name": "lightlynx",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "vite build src/ --outDir ../public --emptyOutDir --assetsDir .",
    "build:debug": "vite build src/ --outDir ../public --emptyOutDir --assetsDir . --mode development --sourcemap --minify false",
    "watch": "npm run build -- --watch",
    "dev": "vite src/ --host",
    "test": "echo \"Error: no test specified\" && exit 1",
    "purge-cache": "dotenv -- bash -c 'curl --request POST --url https://api.bunny.net/pullzone/$BUNNY_PZ_ID/purgeCache --header \"AccessKey: $BUNNY_ACCESS_KEY\" --header \"accept: application/json\" --header \"content-type: application/json\" --data \"{}\"'",
    "deploy": "npm run build && dotenv -- bash -c 'rclone sync public/ :sftp,host=$DEPLOY_HOST,user=$DEPLOY_USER,pass=$DEPLOY_PASS_OBSCURED,key_use_agent=false:/ --progress --inplace --sftp-shell-type=none' && npm run purge-cache"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aberdeen": "^1.3.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "dotenv-cli": "^11.0.0",
    "vite": "^6.0.7"
  }
}
